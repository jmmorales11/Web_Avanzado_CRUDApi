@model ESTUDIANTECRUD.Models.ViewModels.EstudianteVM
@{
    ViewData["Title"] = "Estudiante_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oEstudiante.IdEstudiante == 0)
{
    <h2>Crear Empleado</h2>
}
else
{
    <h2>Editar Empleado</h2>
}

<div >
    <div class="center col-sm-4">
        <form asp-action="Estudiante_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oEstudiante.IdEstudiante" />
            <div class="mb-2">
                <label class="form-label" asp-for="oEstudiante.NombreEstudiante">Nombre</label>
                <input class="form-control form-control-sm" asp-for="oEstudiante.NombreEstudiante" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oEstudiante.Apellido">Apellido</label>
                <input class="form-control form-control-sm" asp-for="oEstudiante.Apellido" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oEstudiante.CedulaEstudiante">Cedula</label>
                <input class="form-control form-control-sm" asp-for="oEstudiante.CedulaEstudiante" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oEstudiante.IdMateria">Materia</label>
                <select class="form-select form-select-sm" asp-for="oEstudiante.IdMateria" asp-items="@Model.oListaMateria">
                    <option selected disabled>--Selecionar--</option>
                </select>
            </div>

            <div class="mb-2">
                @if (Model.oEstudiante.IdEstudiante == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type ="submit"> Crear</button>
                }
                else{

                    <button class="btn btn-primary btn-sm w-25" type ="submit"> Actualizar</button>
                 }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home" >
                    Volver
                </a>

                </div>
        </form>
    </div>
</div>
