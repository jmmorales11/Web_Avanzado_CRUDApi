@model  ESTUDIANTECRUD.Models.Estudiante
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger"> ¿Esta seguro de eliminar el empleado? </h2>

<div>
    <div class="col-sm-4">
        <form asp-action="Eliminar" asp-controller="Home" method="post">
            <input type="hidden" asp-for="IdEstudiante" />
            <div class="mb-2">
                <label class="form-label" asp-for="NombreEstudiante">Nombre</label>
                <input class="form-control form-control-sm" asp-for="NombreEstudiante" type="text" disabled/>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Apellido">Apellido</label>
                <input class="form-control form-control-sm" asp-for="Apellido" type="text" disabled />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="CedulaEstudiante">Cedula</label>
                <input class="form-control form-control-sm" asp-for="CedulaEstudiante" type="text" disabled />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="IdMateria">Materia</label>
                <input class="form-control form-control-sm" asp-for="oMateria.NombreMateria" type="text" disabled />
            </div>

            <div class="mb-2">
                <button class="btn btn-danger btn-sm w-25">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">
                    Volver
                </a>

            </div>
        </form>
    </div>
</div>


